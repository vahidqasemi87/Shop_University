@model IEnumerable<SimpleShop.Models.ProductAttribute>

@{
    ViewData["Title"] = "لیست ویژگی";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    <a class="btn btn-xs btn-success" asp-action="Create">جدید</a>
</p>

@Html.Grid(Model).Columns(columns =>
{
    columns.Add(m => m.Name).Titled("نام").Filterable(true).Sortable(true);
    columns.Add(m => m.Unit.Name).Titled("واحد اندازه گیری").Filterable(true).Sortable(true);
    columns.Add()
    .Sanitized(false)
    .Encoded(false)
    .RenderValueAs(m => "<a class='btn btn-xs btn-warning' href='/productattributes/edit/" + m.ProductAttributeId + "'>ویرایش</a> <button class='btn btn-xs btn-danger' data-toggle='modal' data-target='#deleteDialog' onclick='setId(" + m.ProductAttributeId + ")'>حذف</button>");
}).SetDirection(GridShared.GridDirection.RTL).SetStriped(true).Searchable(true).WithPaging(5).EmptyText("در حال حاضر اطلاعاتی موجود نیست !")
