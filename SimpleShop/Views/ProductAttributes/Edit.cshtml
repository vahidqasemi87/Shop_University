@model SimpleShop.Models.ProductAttribute

@{
    ViewData["Title"] = "ویرایش ویژگی";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    <a class="btn btn-xs btn-success" asp-action="Index">بازگشت</a>
</p>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ProductAttributeId" />
    <div class="form-group">
        <label asp-for="UnitId" class="control-label"></label>
        <select asp-for="UnitId" class="form-control" asp-items="ViewBag.UnitId"></select>
        <span asp-validation-for="UnitId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="ذخیره" class="btn btn-success" />
    </div>
</form>