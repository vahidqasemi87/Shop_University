<head>
    <meta charset="utf-8" />
    <title>ورود مدیریت</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta content="" name="author" />
    <link href="/admin/assets/global/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="/admin/assets/global/plugins/simple-line-icons/simple-line-icons.min.css" rel="stylesheet" type="text/css" />
    <link href="/admin/assets/global/plugins/bootstrap/css/bootstrap-rtl.min.css" rel="stylesheet" type="text/css" />
    <link href="/admin/assets/global/plugins/bootstrap-switch/css/bootstrap-switch-rtl.min.css" rel="stylesheet" type="text/css" />
    <link href="/admin/assets/global/plugins/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="/admin/assets/global/plugins/select2/css/select2-bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/admin/assets/global/css/components-rtl.min.css" rel="stylesheet" id="style_components" type="text/css" />
    <link href="/admin/assets/global/css/plugins-rtl.min.css" rel="stylesheet" type="text/css" />
    <link href="/admin/assets/pages/css/login-rtl.min.css" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" href="favicon.ico" />
    <link href="/admin/css/font.css" rel="stylesheet" />
    <link href="/admin/css/site.css" rel="stylesheet" />
</head>
<body class=" login">
    <div class="content">
        <form class="login-form" method="post">
            <h3 class="form-title font-green persian-font">ورود</h3>
            @if (ViewData["Message"]!=null)
            {
                <div class="alert alert-danger">
                    <button class="close" data-close="alert"></button>
                    <strong class="persian-font">@ViewData["Message"]</strong>
                </div>
            }
            <div class="form-group">
                <label class="persian-font control-label visible-ie8 visible-ie9">شناسه</label>
                <input class="persian-font form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="شناسه" name="username" />
            </div>
            <div class="form-group">
                <label class="persian-font control-label visible-ie8 visible-ie9">رمز</label>
                <input class="persian-font form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="رمز" name="password" />
            </div>
            <div class="form-group">
                <label class="persian-font control-label visible-ie8 visible-ie9">کد امنیتی</label>
                <input class="persian-font form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="کد امنیتی" name="code" />
            </div>
            <div class="form-group text-center">
                <img src="/home/captcha" />
            </div>
            <div class="form-actions">
                <button type="submit" class="persian-font btn green uppercase">ورود</button>
            </div>
        </form>                
    </div>
