@model IEnumerable<SimpleShop.Models.User>

@{
    ViewData["Title"] = "لیست کاربر";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    <a class="btn btn-xs btn-success" asp-action="Create">جدید</a>
</p>

@Html.Grid(Model).Columns(columns =>
{
    columns.Add(m => m.Username).Titled("شناسه").Filterable(true).Sortable(true);
    columns.Add(m => m.Family).Titled("نام خانوادگی").Filterable(true).Sortable(true);
    columns.Add(m => m.Name).Titled("نام").Filterable(true).Sortable(true);
    columns.Add(m => m.Mobile).Titled("موبایل").Filterable(true).Sortable(true);
    columns.Add(m => m.IsAdminString).Titled("مدیر").Filterable(true).Sortable(true);
    columns.Add()
.Sanitized(false)
.Encoded(false)
.RenderValueAs(m => "<a class='btn btn-xs btn-warning' href='/users/edit/" + m.UserId + "'>ویرایش</a> <button class='btn btn-xs btn-danger' data-toggle='modal' data-target='#deleteDialog' onclick='setId(" + m.UserId + ")'>حذف</button>");
}).SetDirection(GridShared.GridDirection.RTL).SetStriped(true).Searchable(true).WithPaging(5).EmptyText("در حال حاضر اطلاعاتی موجود نیست !")